# ======================
# KONFIGURASI UTAMA BOT
# ======================

# TELEGRAM BOT
TELEGRAM_TOKEN=isi_dengan_token_bot_anda
ADMIN_ID=isi_dengan_chat_id_admin  # Contoh: 123456789
BOT_USERNAME=username_bot_anda  # Contoh: MyVVIPBot

# ======================
# DATABASE (MongoDB)
# ======================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vvip_bot?retryWrites=true&w=majority
DB_NAME=vvip_bot

# ======================
# VIOLET MEDIA PAY
# ======================
VIOLET_API_KEY=isi_dengan_api_key_violet
VIOLET_SECRET_KEY=isi_dengan_secret_key_violet
VIOLET_BASE_URL=https://violetmediapay.com/api/sandbox/transactions  # Ganti dengan /sandbox/ untuk testing

# ======================
# WEBHOOK (Opsional)
# ======================
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443
SSL_CERT=path/to/cert.pem
SSL_KEY=path/to/key.pem

# ======================
# PENGATURAN LAINNYA
# ======================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
TIMEZONE=Asia/Jakarta
